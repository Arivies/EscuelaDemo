{% extends '::front.html.twig' %}

{% block content %}
<table>
    <thead>
        <tr>
            <th width="30">ID</th>
            <th width="120">NO. CONTROL</th>
            <th width="220">NOMBRE</th>
            <th width="210">APELLIDOS</th>
            <th width="120">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('alumnos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nocontrol }}</td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.apellidopaterno ~ " " ~ entity.apellidomaterno }}</td>
            <td>
                <a href="{{ path('alumnos_show', { 'id': entity.id }) }}">show</a>
                <a href="#">eliminar</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(entities) }}
{% endblock %}
