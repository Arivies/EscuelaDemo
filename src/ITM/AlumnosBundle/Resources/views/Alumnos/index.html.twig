{% extends '::front.html.twig' %}

{% block content %}
<table class="records_list">
    <thead>
        <tr>
            <th>ID</th>
            <th>NO. CONTROL</th>
            <th>NOMBRE</th>
            <th>APELLIDOS</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('alumnos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nocontrol }}</td>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.apellidopaterno ~ " " ~ entity.apellidomaterno }}</td>
            <td>
            <ul>
                <li>
                    <a href="{{ path('alumnos_show', { 'id': entity.id }) }}">show</a>
                </li>
            </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{{ knp_pagination_render(entities) }}
{% endblock %}
